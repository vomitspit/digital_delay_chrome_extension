{
  "manifest_version": 3,
  "name": "(((digital delay)))",
  "description": "adds configurable delay/echo to your tab audio",
  "version": "0.4",
  "permissions": ["tabCapture", "offscreen", "activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["impulse/*.wav"],
      "matches": ["<all_urls>"]
    }
]

}
